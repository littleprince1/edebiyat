                        </Grid>
                        <DockPanel HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button Content="aaa" Height="30" Width="30" Margin="0,0,6,0"/>
                            <Button Content="aaa" Height="30" Width="30" Margin="6,0,0,0"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Margin="5,0,0,0" VerticalAlignment="Center">
                        <DockPanel HorizontalAlignment="Left">
                            <Button Content="a" Width="18" Height="18"/>
