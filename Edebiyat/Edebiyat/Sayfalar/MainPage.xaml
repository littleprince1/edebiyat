                        </DockPanel>
                    </StackPanel>
                </DockPanel>
            </DockPanel>
            
        </Grid>
        <Frame Grid.Column="1" Grid.Row="1" Source="/Edebiyat;component/Sayfalar/Login.xaml" Margin="5" BorderBrush="White" BorderThickness="2"/>
